---
interface Props {
  text: string;
  href: string;
  target?: boolean;
}

const { text, href, target = false } = Astro.props;
---

<a
  href={href}
  target={target ? "_blank" : null}
  class="px-3 py-1 rounded-full text-black/70 dark:text-white/70 text-sm font-semibold hover:bg-black/10 hover:dark:bg-white/10 hover:text-black hover:dark:text-white transition duration-300"
  >{text}</a
>
