---
interface Props {
  position: string;
  line: string;
  containerSize: string;
}
const { position, line, containerSize } = Astro.props;
---

<div
  class={`absolute ${position} flex items-center ${line}`}
>
  <span class="relative inline-flex rounded-full p-[1px] z-10">
    <div
      class={`inline-flex items-center justify-center ${containerSize === "big" ? "size-24" : containerSize === "medium" ? "size-16" : "size-10"} px-3 py-1 rounded-full dark:bg-gray-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap`}
    >
      <slot />
    </div>
  </span>
</div>
